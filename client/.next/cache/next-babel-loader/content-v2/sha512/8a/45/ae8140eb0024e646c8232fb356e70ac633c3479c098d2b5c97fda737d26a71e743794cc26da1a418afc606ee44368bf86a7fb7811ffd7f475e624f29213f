{"ast":null,"code":"export const byteConvertor = bytes => {\n  const sizes = ['b', 'kb', 'mb', 'gb', 'tb'];\n\n  if (bytes === 0) {\n    return 'n/a';\n  } //@ts-ignore\n\n\n  const i = parseInt(Math.floor(Math.log(bytes) / Math.log(1024)), 10);\n\n  if (i === 0) {\n    return `${bytes} ${sizes[i]}`;\n  }\n\n  return `${(bytes / 1024 ** i).toFixed(1)} ${sizes[i]}`;\n};\nexport const calcPercentage = (value, max) => {\n  const percentValue = Number((value * 100 / max).toFixed(0));\n  return value >= max ? 100 : percentValue;\n};\nexport const generateRandomNumber = (digit = 2) => {\n  return Math.floor(+Math.random().toFixed(digit) * 100);\n};\nexport const convertOpacityToAlpha = (hexColor, percent) => {\n  const alpha = Math.round(percent * 255);\n  const hex = (alpha + 0x10000).toString(16).substr(-2).toUpperCase();\n  return hexColor + hex;\n};","map":null,"metadata":{},"sourceType":"module"}